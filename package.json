    "typescript-eslint": "8.46.1",
    "verdaccio": "6.2.4",
    "vite": "7.1.9",
    "vite-plugin-dts": "4.5.4",
    "vitest": "3.2.4",
    "yalc": "^1.0.0-pre.53"
  },
  "workspaces": [
    "libs/*"
  ],
  "dependencies": {
    "@blue-labs/language": "2.0.0-rc.20",
    "@blue-labs/repository-contract": "2.0.0-rc.20",
    "@nx/devkit": "22.0.2",
    "@phenomnomnominal/tsquery": "6.1.3",
    "zod": "^3.23.8"
