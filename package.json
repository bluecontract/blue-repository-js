    "@nx/plugin": "22.0.2",
    "@nx/vite": "22.0.2",
    "@nx/web": "22.0.2",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "20.19.9",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "axios": "^1.6.7",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "10.1.8",
    "jiti": "2.4.2",
